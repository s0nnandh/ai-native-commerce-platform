# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here  # Optional, if using Gemini
GOOGLE_API_KEY=your_google_api_key_here  # Optional, if using Google APIs
GOOGLE_PROJECT_NAME=your_project_name_here  # Optional, if using Google APIs

# LangSmith Configuration (Optional, for debugging LangChain)
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=default
LANGSMITH_ENDPOINT=https://api.smith.langchain.com/

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5000  # Backend API URL for local development
# VITE_API_BASE_URL=https://your-production-api.com  # For production

# ChromaDB Configuration
# Uncomment these when using Docker
# CHROMA_HOST=chromadb
# CHROMA_PORT=8000

# Flask Configuration
FLASK_ENV=development  # Use 'production' for production environments
FLASK_DEBUG=True  # Set to False in production
